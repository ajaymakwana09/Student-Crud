<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ViewData</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        h1 {
            color: #2a32a1;
            margin-top: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            max-width: 1000px;
            margin: 20px auto;
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
        }

        th {
            background-color: #2a32a1;
            color: #fff;
            text-transform: uppercase;
        }

        td {
            background-color: #f9f9f9;
        }

        td:first-child {
            text-align: center;
        }

        .btn-container {
            margin-top: 20px;
        }

        .btn {
            display: inline-block;
            /* margin: 10px; */
            padding: 10px 20px;
            border: none;
            border-radius: 25px;
            background-color: #2a32a1;
            color: #fff;
            text-decoration: none;
            text-transform: uppercase;
            transition: background-color 0.3s;
            outline: none;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #1d247a;
        }
    </style>
</head>

<body>
    <h1>ViewData</h1>
    <div class="btn-container">
        <a class="btn" href="/">Back to Home</a>
    </div>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Group ID</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach((std, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= std.fname %></td>
                        <td><%= std.lname %></td>
                        <td><%= std.number %></td>
                        <td><%= std.email %></td>
                        <td><%= std.grid %></td>
                        <td>
                            <a class="btn" href="/deletestd/<%= std.id %>">Delete</a>
                            <a class="btn" href="/editstd/<%= std.id %>">Edit</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>
